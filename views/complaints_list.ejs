<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Lista de Quejas</title>
    <link rel="stylesheet" href="/complaint_list_style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- DataTables CSS -->
